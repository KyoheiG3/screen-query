{
  "name": "screen-query",
  "version": "0.0.1",
  "description": "React Query integration for synchronous multi-query management with Suspense/ErrorBoundary",
  "author": "KyoheiG3",
  "license": "MIT",
  "engines": {
    "npm": "please use pnpm instead"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KyoheiG3/screen-query.git"
  },
  "homepage": "https://github.com/KyoheiG3/screen-query",
  "bugs": {
    "url": "https://github.com/KyoheiG3/screen-query/issues"
  },
  "keywords": [
    "react",
    "react-query",
    "tanstack-query",
    "suspense",
    "error-boundary",
    "query",
    "state-management",
    "typescript"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "dev": "tsc -p tsconfig.build.json --watch && tsc-alias --watch",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "format": "dprint fmt",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@tanstack/react-query": "^5.89.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.0.0",
    "eslint": "^9.35.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jiti": "^2.5.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-jest": "^29.4.3",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.0.0 || ^19.0.0"
  }
